<!DOCTYPE html>
<html>
  <head>
    <title>Bag of Holding</title>
    <%= render :partial => "dashboard/include" %>
  </head>

  <body class="bg-dark">
    <%= render :partial => "dashboard/nav" %>
    <div class="table-responsive" >
      <table class="table table-dark table-hover table-bordered text-center " >
        <thead>
          <tr>
            <th> Name </th>
            <th> Date Created </th>
            <th> Date Last Modified </th>
            <th> Open Bag </th>
            <th> Delete </th>
          </tr>
        <tbody>
      <% @bags.each do |bag| %>
        <tr>
          <td><%= bag['name'] %></td>
          <td><%= bag['created_at'] %></td>
          <td><%= bag['updated_at'] %></td>
          <td><a class="btn btn-primary" role="button" href='/inventory/show_inventory?id=<%= bag['id'] %>'>Open</a></td>
          <td><a class="btn btn-primary" role="button" onclick='return confirmDelete("<%= bag['name'] %>");' href='/inventory/delete_bag_of_holding?id=<%= bag['id'] %>'>Delete</a></td>
        </tr>
      <% end %>
        </tbody>
      </table>
      <% if !flash.nil? %>
    <ul class="Signup_Errors">
      <li>
        <div class="<%=flash[:color] %>"><%= flash[:notice] %></div>
      </li>
    </ul>
  <% end %>
    </div>
    <a class="btn btn-primary btn-lg" role="button" href='/inventory/new_bag_of_holding'>Create a new BOH</a>
  </body>
</html>

<script>

        function confirmDelete(e){
          return confirm("Are you sure you want to delete " + e + "?");
        }

</script>

