<!DOCTYPE html>
<html>
  <head>
    <title>Bag of Holding</title>
    <%= render :partial => "dashboard/include" %>
  </head>

  <body class="bg-dark">
    <%= render :partial => "dashboard/nav" %>
    <div class="table-responsive" >
      <table class="table table-dark table-hover table-bordered table-striped text-center " >
        <thead>
          <tr>
            <th> Name </th>
            <th> Date Created </th>
            <th> Date Last Modified </th>
            <th> Enter </th>
          </tr>
        <tbody>
      <% @bohs.each do |x| %>
        <tr>
          <td><%= x['name'] %></td>
          <td><%= x['created_at'] %></td>
          <td><%= x['updated_at'] %></td>
          <td><a href='/inventory/checkBOH?name=<%= x['name'] %>'>Open BOH</a></td>
        </tr>
      <% end %>
        </tbody>
      </table>
    </div>
    <a href='/inventory/newBOH'>Create a new BOH</a>
  </body>
</html>

